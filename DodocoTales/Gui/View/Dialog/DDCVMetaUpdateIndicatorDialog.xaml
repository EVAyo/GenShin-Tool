<Window x:Class="DodocoTales.Gui.View.Dialog.DDCVMetaUpdateIndicatorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DodocoTales.Gui.View.Dialog"
        mc:Ignorable="d"
        Title="DDCVMetaUpdateIndicatorDialog" Height="100" Width="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        BorderThickness="1"
        BorderBrush="Silver"
        Loaded="Window_Loaded"
        Name="Root">
    <Grid>
        <Label HorizontalContentAlignment="Center" VerticalAlignment="Center" FontSize="16"  Content="{Binding ElementName=Root,Path=Hint}"/>
    </Grid>
</Window>
